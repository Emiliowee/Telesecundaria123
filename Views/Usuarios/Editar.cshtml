@model ProyTelesecundaria.Models.Usuario

@{
    ViewData["Title"] = "Editar Usuario";
    Layout = "_Layout";
}

<div class="main-content">
    <h2>Editar Usuario</h2>

    <form asp-action="Editar" method="post" class="user-form">
        <input type="hidden" asp-for="IDUsuario" />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group">
            <label asp-for="Nombre">Nombre:</label>
            <input asp-for="Nombre" class="form-control" />
            <span asp-validation-for="Nombre" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Correo">Correo Electr√≥nico:</label>
            <input asp-for="Correo" class="form-control" type="email" />
            <span asp-validation-for="Correo" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="TipoUsuario">Tipo de Usuario:</label>
            <select asp-for="TipoUsuario" class="form-control">
                <option value="Director">Director</option>
                <option value="Secretario">Secretario</option>
                <option value="Maestro">Maestro</option>
                <option value="Administrativo">Personal Administrativo</option>
            </select>
            <span asp-validation-for="TipoUsuario" class="text-danger"></span>
        </div>

        <div class="form-actions">
            <button type="submit" class="btn btn-primary">Guardar Cambios</button>
            <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
        </div>
    </form>
</div> 